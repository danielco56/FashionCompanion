<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#FFFFFF"
    >

    <ImageView
        android:layout_width="66dp"
        android:layout_height="60dp"
        android:src="@drawable/linii"
        android:id="@+id/linii"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Magazine"
        android:textColor="#9E9E9E"
        android:textSize="25dp"
        android:padding="10dp"
        />





    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:id="@+id/lista22"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/hm"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:background="@drawable/hm" />

            <Button
                android:id="@+id/zara"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"

                android:background="@drawable/zara" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/nike"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:background="@drawable/nike" />

            <Button
                android:id="@+id/ca"
                android:layout_marginTop="20dp"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:background="@drawable/ca" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/graphic" />


</RelativeLayout>
